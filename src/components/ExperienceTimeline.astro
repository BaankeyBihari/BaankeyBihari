---
// Interactive timeline for work experience  
const experiences = [
  {
    company: "Capital One",
    title: "Lead Software Engineer",
    period: "June 2025 - Present",
    location: "Remote",
    description: "Driving engineering excellence at Capital One. Leading high-impact teams to architect and deliver robust, scalable cloud-native solutions that empower financial innovation.",
    technologies: ["AWS", "Kubernetes", "Microservices", "Python", "TypeScript"]
  },
  {
    company: "Microsoft",
    title: "Software Engineer",
    period: "November 2021 - April 2025",
    location: "Remote",
    description: "Delivered mission-critical software for Microsoft's cloud ecosystem. Specialized in public cloud, SD-WAN, and high-performance systems.",
    technologies: ["Azure", "C++", "Distributed Systems", "Cloud"]
  },
  {
    company: "Cadence Design Systems",
    title: "Lead Solutions Engineer",
    period: "June 2019 - October 2021",
    location: "San Jose, CA",
    description: "Spearheaded solution engineering initiatives for advanced design automation products. Drove end-to-end system design and multithreaded architecture.",
    technologies: ["C++", "SystemVerilog", "FPGA", "Simulation"]
  },
  {
    company: "Western Digital",
    title: "Staff Engineer",
    period: "January 2018 - June 2019",
    location: "Bangalore, India",
    description: "Engineered next-generation enterprise SSDs by analyzing NAND behavior and innovating at the intersection of hardware and software.",
    technologies: ["C", "Firmware", "NAND", "Storage"]
  },
  {
    company: "Qualcomm",
    title: "Engineer",
    period: "July 2017 - January 2018",
    location: "Hyderabad, India",
    description: "Developed modem firmware for cutting-edge wireless technologies. Collaborated on core protocol stacks.",
    technologies: ["C", "Embedded", "5G", "Protocols"]
  }
];
---

<section class="experience-section section-lg" id="experience">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Experience</h2>
      <p class="section-subtitle">Professional journey across leading tech companies</p>
    </div>
    
    <div class="timeline">
      {experiences.map((exp, index) => (
        <div class="timeline-item animate-fadeInUp" style={`animation-delay: ${index * 100}ms`}>
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <div class="timeline-header">
              <div>
                <h3 class="timeline-company">{exp.company}</h3>
                <p class="timeline-role">{exp.title}</p>
              </div>
              <div class="timeline-meta">
                <span class="timeline-period">
                  <i class="fas fa-calendar"></i>
                  {exp.period}
                </span>
                <span class="timeline-location">
                  <i class="fas fa-map-marker-alt"></i>
                  {exp.location}
                </span>
              </div>
            </div>
            
            <p class="timeline-description">{exp.description}</p>
            
            <div class="timeline-tech">
              {exp.technologies.map(tech => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience-section {
    background: var(--bg-primary);
  }
  
  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    padding-left: var(--space-8);
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--gradient-primary);
  }
  
  .timeline-item {
    position: relative;
    padding-bottom: var(--space-12);
  }
  
  .timeline-item:last-child {
    padding-bottom: 0;
  }
  
  .timeline-marker {
    position: absolute;
    left: -44px;
    top: 8px;
    width: 16px;
    height: 16px;
    background: var(--accent-primary);
    border: 4px solid var(--bg-primary);
    border-radius: 50%;
    box-shadow: 0 0 0 4px var(--bg-secondary);
    z-index: 2;
  }
  
  .timeline-content {
    background: var(--bg-card);
    padding: var(--space-6);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-color);
    transition: all var(--transition-base);
  }
  
  .timeline-item:hover .timeline-content {
    transform: translateX(8px);
    box-shadow: var(--shadow-lg);
  }
  
  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-4);
    gap: var(--space-4);
  }
  
  .timeline-company {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }
  
  .timeline-role {
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--accent-primary);
    margin: 0;
  }
  
  .timeline-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    text-align: right;
  }
  
  .timeline-period,
  .timeline-location {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }
  
  .timeline-description {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-4);
  }
  
  .timeline-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }
  
  .tech-tag {
    padding: var(--space-1) var(--space-3);
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    font-size: var(--text-xs);
    font-weight: 500;
    color: var(--accent-primary);
    font-family: var(--font-mono);
  }
  
  @media (max-width: 768px) {
    .timeline {
      padding-left: var(--space-6);
    }
    
    .timeline-marker {
      left: -32px;
    }
    
    .timeline-header {
      flex-direction: column;
    }
    
    .timeline-meta {
      text-align: left;
    }
  }
</style>
